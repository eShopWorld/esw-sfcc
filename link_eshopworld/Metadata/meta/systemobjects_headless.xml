<?xml version="1.0" encoding="UTF-8"?>
<metadata xmlns="http://www.demandware.com/xml/impex/metadata/2006-10-31">
    <type-extension type-id="ProductLineItem">
        <custom-attribute-definitions>
            <attribute-definition attribute-id="eswBasePrice">
                <display-name xml:lang="x-default">ESW Base Price</display-name>
                <description xml:lang="x-default">Product Line Item Shopper Currency eSW Base Price</description>
                <type>double</type>
                <mandatory-flag>false</mandatory-flag>
                <externally-managed-flag>false</externally-managed-flag>
            </attribute-definition>
            <attribute-definition attribute-id="eswPrice">
                <display-name xml:lang="x-default">ESW Price</display-name>
                <description xml:lang="x-default">Product Line Item Shopper Currency eSW Price</description>
                <type>double</type>
                <mandatory-flag>false</mandatory-flag>
                <externally-managed-flag>false</externally-managed-flag>
            </attribute-definition>
            <attribute-definition attribute-id="eswPriceAfterOrderDiscount">
                <display-name xml:lang="x-default">ESW Price After Order Discount</display-name>
                <type>double</type>
                <mandatory-flag>false</mandatory-flag>
                <externally-managed-flag>false</externally-managed-flag>
            </attribute-definition>
            <attribute-definition attribute-id="eswRegularPrice">
                <display-name xml:lang="x-default">ESW Regular Price</display-name>
                <description xml:lang="x-default">Product Line Item Shopper Currency eSW Regular Price</description>
                <type>double</type>
                <mandatory-flag>false</mandatory-flag>
                <externally-managed-flag>false</externally-managed-flag>
            </attribute-definition>
			<attribute-definition attribute-id="eswSalePrice">
                <display-name xml:lang="x-default">ESW Sale Price</display-name>
                <description xml:lang="x-default">Product Line Item Shopper Currency eSW Sale Price</description>
                <type>double</type>
                <mandatory-flag>false</mandatory-flag>
                <externally-managed-flag>false</externally-managed-flag>
            </attribute-definition>
			<attribute-definition attribute-id="eswRestrictedProduct">
                <display-name xml:lang="x-default">ESW Restricted Product</display-name>
                <type>boolean</type>
                <mandatory-flag>false</mandatory-flag>
                <externally-managed-flag>false</externally-managed-flag>
            </attribute-definition>
        </custom-attribute-definitions>
        <group-definitions>
            <attribute-group group-id="eswProductLineItemHeadless">
                <display-name xml:lang="x-default">ESW Product Line Item Headless</display-name>
                <attribute attribute-id="eswBasePrice"/>
                <attribute attribute-id="eswPrice"/>
                <attribute attribute-id="eswPriceAfterOrderDiscount"/>
				<attribute attribute-id="eswRegularPrice"/>
                <attribute attribute-id="eswSalePrice"/>
				<attribute attribute-id="eswRestrictedProduct"/>
            </attribute-group>
		</group-definitions>
    </type-extension>
	
