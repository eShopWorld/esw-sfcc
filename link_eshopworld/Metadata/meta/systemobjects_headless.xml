    <type-extension type-id="SitePreferences">
        <custom-attribute-definitions>
			<attribute-definition attribute-id="eswBasketPricingMapping">
                <display-name xml:lang="x-default">ESW Basket Pricing Mapping</display-name>
                <description xml:lang="x-default">ESW Basket Attributes Mapping with Custom Attributes</description>
                <type>text</type>
                <mandatory-flag>false</mandatory-flag>
                <externally-managed-flag>false</externally-managed-flag>
            </attribute-definition>
			<attribute-definition attribute-id="eswPriceBookKeyWords">
                <display-name xml:lang="x-default">ESW Pricebook Keywords - Retailer Currencies/ Keywords</display-name>
                <description xml:lang="x-default">Enter Pricebook ID keywords (separated by pipeline) which needs to be replaced while converting the pricebook prices.&#13;
Keywords Example: Retailer Currencies, countries, etc.&#13;
Value(s) Example: usd|cad|gbp</description>
                <type>string</type>
                <mandatory-flag>false</mandatory-flag>
                <externally-managed-flag>false</externally-managed-flag>
                <min-length>0</min-length>
            </attribute-definition>
        </custom-attribute-definitions>
        <group-definitions>
			<attribute-group group-id="ESW Headless Integration Configuration">
                <display-name xml:lang="x-default">ESW Headless Integration Configuration</display-name>
                <attribute attribute-id="eswBasketPricingMapping"/>
				<attribute attribute-id="eswPriceBookKeyWords"/>
            </attribute-group>
        </group-definitions>
